{
  "description": "Overlap container with wrap_content width and height and items with match_parent height and match_parent width with constraints",
  "platforms": [
    "android"
  ],
  "templates": {
    "test_container": {
      "type": "container",
      "width": {
        "type": "wrap_content"
      },
      "height": {
        "type": "wrap_content"
      },
      "orientation": "overlap",
      "border": {
        "stroke": {
          "color": "#000000"
        }
      },
      "margins": {
        "bottom": 16
      }
    },
    "item": {
      "type": "container",
      "height": {
        "type": "match_parent"
      },
      "border": {
        "stroke": {
          "color": "#FF0000",
          "width": 3
        }
      },
      "items": [
        {
          "type": "text",
          "width": {
            "type": "fixed",
            "$value": "content_size"
          },
          "paddings": {
            "top": 8,
            "right": 8,
            "bottom": 8,
            "left": 8
          },
          "border": {
            "stroke": {
              "color": "#0000FF",
              "width": 5
            }
          },
          "font_size": 16,
          "$text": "title"
        }
      ]
    }
  },
