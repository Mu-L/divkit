{
  "description": "Horizontal container with fixed height and items with aspect height and match_parent width with constraints",
  "platforms": [
    "android"
  ],
  "templates": {
    "test_container": {
      "type": "container",
      "width": {
        "type": "fixed",
        "value": 360
      },
      "height": {
        "type": "fixed",
        "value": 50
      },
      "orientation": "horizontal",
      "border": {
        "stroke": {
          "color": "#000000"
        }
      },
      "margins": {
        "bottom": 16
      }
    },
    "item": {
      "type": "container",
      "height": {
        "type": "wrap_content"
      },
      "aspect": {
        "ratio": 8
      },
      "border": {
        "stroke": {
          "color": "#FF0000",
          "width": 3
        }
      },
      "items": [
        {
          "type": "text",
          "width": {
            "type": "wrap_content"
          },
          "paddings": {
            "top": 8,
            "right": 8,
            "bottom": 8,
            "left": 8
          },
          "font_size": 16,
          "$text": "title"
        }
      ]
    }
  },
  "card": {
