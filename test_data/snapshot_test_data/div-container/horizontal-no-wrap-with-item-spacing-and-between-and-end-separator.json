{
  "description": "Horizontal no-wrap container with item_spacing and a separator at the end and between items (separator overrides item_spacing)",
  "platforms": [
    "android"
  ],
  "templates": {
    "card_item": {
      "type": "text",
      "$text": "title",
      "font_size": 14,
      "text_alignment_horizontal": "center",
      "text_alignment_vertical": "center",
      "width": {
        "type": "fixed",
        "value": 80
      },
      "height": {
        "type": "fixed",
        "value": 56
      },
      "background": [
        {
          "type": "solid",
          "color": "#E3E9FF"
        }
      ],
      "border": {
        "corner_radius": 8,
        "stroke": {
          "color": "#4158D0"
        }
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "horizontal",
          "width": {
            "type": "match_parent"
          },
          "height": {
            "type": "wrap_content"
          },
          "border": {
            "stroke": {
              "color": "#CCCCCC"
            }
          },
          "paddings": {
            "left": 10,
            "top": 10,
            "right": 10,
            "bottom": 10
          },
          "item_spacing": 24,
          "separator": {
            "show_at_start": false,
            "show_between": true,
            "show_at_end": true,
            "style": {
              "type": "shape_drawable",
              "shape": {
                "type": "rounded_rectangle",
                "item_width": {
                  "type": "fixed",
                  "value": 2
                },
                "item_height": {
                  "type": "fixed",
                  "value": 20
                },
                "corner_radius": {
                  "type": "fixed",
                  "value": 1
                }
              },
              "color": "#FF0000"
            },
            "margins": {
              "left": 4,
              "top": 4,
              "right": 4,
              "bottom": 4
            }
          },
          "items": [
            {
              "type": "card_item",
              "title": "Item 1"
            },
            {
              "type": "card_item",
              "title": "Item 2"
            },
            {
              "type": "card_item",
              "title": "Item 3"
            }
          ]
        }
      }
    ]
  }
}
