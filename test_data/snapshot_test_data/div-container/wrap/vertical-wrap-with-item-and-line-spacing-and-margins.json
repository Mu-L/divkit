{
  "description": "Vertical wrap container with item_spacing and line_spacing applied together with item margins (to check correct combination).",
  "platforms": [
    "android",
    "web"
  ],
  "templates": {
    "card_item": {
      "type": "text",
      "$text": "title",
      "font_size": 14,
      "text_alignment_horizontal": "center",
      "text_alignment_vertical": "center",
      "width": {
        "type": "fixed",
        "value": 120
      },
      "height": {
        "type": "fixed",
        "value": 60
      },
      "background": [
        {
          "type": "solid",
          "color": "#E3E9FF"
        }
      ],
      "border": {
        "corner_radius": 8,
        "stroke": {
          "color": "#4158D0"
        }
      },
      "margins": {
        "left": 6,
        "top": 6,
        "right": 6,
        "bottom": 6
      },
      "paddings": {
        "left": 8,
        "top": 8,
        "right": 8,
        "bottom": 8
      }
    }
  },
  "card": {
    "log_id": "snapshot_test_card",
    "states": [
      {
        "state_id": 0,
        "div": {
          "type": "container",
          "orientation": "vertical",
          "layout_mode": "wrap",
          "width": {
            "type": "match_parent"
          },
          "height": {
            "type": "fixed",
            "value": 260
          },
          "border": {
            "stroke": {
              "color": "#CCCCCC"
            }
          },
          "paddings": {
            "left": 10,
            "top": 10,
            "right": 10,
            "bottom": 10
          },
          "item_spacing": 4,
          "line_spacing": 8,
          "items": [
            {
              "type": "card_item",
              "title": "Item 1 with margins 6"
            },
            {
              "type": "card_item",
              "title": "Item 2 with margins 6"
            },
            {
              "type": "card_item",
              "title": "Item 3 with margins 6"
            },
            {
              "type": "card_item",
              "title": "Item 4 with margins 6"
            },
            {
              "type": "card_item",
              "title": "Item 5 with margins 6"
            },
            {
              "type": "card_item",
              "title": "Item 6 with margins 6"
            }
          ]
        }
      }
    ]
  }
}
